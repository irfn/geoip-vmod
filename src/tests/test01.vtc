varnishtest "Test GeoIP vmod"

server s1 {
       rxreq
       txresp
} -start

varnish v1 -vcl+backend {
	import geoip from "${pwd}/.libs/libvmod_geoip.so";

	sub vcl_deliver {
		set resp.http.X-GeoIP = geoip.country("127.0.0.1");
		set resp.http.X-Location-Unknown = geoip.record("0.0.0.0");
		set resp.http.X-Location-Known = geoip.record("187.78.67.94");
	}
} -start

client c1 {
	txreq -url "/"
	rxresp
	expect resp.http.X-GeoIP == "Unknown"
	expect resp.http.X-Location-Unknown == "ip: 0.0.0.0, country_code: Unknown, region: Unknown"
	expect resp.http.X-Location-Known == "ip: 187.78.67.94, country_code: BR, region: 30, city: Recife"
}

client c1 -run
