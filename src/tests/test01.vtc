varnishtest "Test GeoIP vmod"

server s1 {
       rxreq
       txresp
} -start

varnish v1 -vcl+backend {
	import geoip from "${pwd}/.libs/libvmod_geoip.so";

	sub vcl_deliver {
		set resp.http.X-GeoIP = geoip.country("127.0.0.1");
		set resp.http.X-Location-Unknown = geoip.region("127.0.0.1");
		set resp.http.X-Location-Known = geoip.region("201.56.216.242");
	}
} -start

client c1 {
	txreq -url "/"
	rxresp
	expect resp.http.X-GeoIP == "Unknown"
	expect resp.http.X-Location-Unknown == "ip: 127.0.0.1, country_code: Unknown, city: Unknown, region: Unknown"
	expect resp.http.X-Location-Known == "ip: 201.56.216.242, country_code: BR, city: S?o Paulo, region: 27"
}

client c1 -run
